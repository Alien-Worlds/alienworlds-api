{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist/",
    "baseUrl": "src"
  },
  "include": ["src/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.fixture.ts",
    "**/__mocks__/**",
    "**/__tests__/**"
  ]
}
