{
  "name": "alienworlds-api",
  "version": "1.0.0",
  "description": "API for AlienWorlds data",
  "main": "index.js",
  "engines": {
    "node": ">=17.3.0 <18.0.0",
    "npm": ">=8.3.0 <9.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "yarn lint-prettier && yarn lint-es",
    "lint-fix": "yarn lint-prettier-fix && yarn lint-es-fix",
    "lint-es": "eslint \"src/**/*\"",
    "lint-es-fix": "eslint --fix \"src/**/*\"",
    "lint-prettier": "yarn prettier --check \"src/\"",
    "lint-prettier-fix": "yarn prettier --write \"src/\"",
    "test:unit": "jest --config=jest.config.unit.js",
    "test:api": "jest --config=jest.config.api.js --detectOpenHandles",
    "build": "node ./scripts/create-env.js && yarn clean && tsc",
    "clean": "rm -rf ./dist",
    "setup-database": "node ./scripts/setup-database.js",
    "api:prod": "node -r ts-node/register -r tsconfig-paths/register index.js",
    "api:dev": "node -r ts-node/register -r tsconfig-paths/register dist/index.js",
    "api:dev-watch": "tsc-watch --onSuccess \"node -r ts-node/register -r tsconfig-paths/register dist/index.js\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged && yarn test:unit"
    }
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.{ts,tsx,js,jsx}": "eslint --fix'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^14.14.22",
    "commander": "^7.0.0",
    "dotenv": "^10.0.0",
    "ethers": "^5.1.0",
    "fastify": "^3.25.0",
    "fastify-autoload": "^3.9.0",
    "fastify-cors": "^6.0.2",
    "fastify-mongodb": "^4.1.1",
    "fastify-oas": "^3.0.8",
    "http": "^0.0.1-security",
    "mongodb": "^4.4.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-recommended": "^4.1.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.4",
    "inversify": "^6.0.1",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.7",
    "prettier": "2.5.1",
    "redoc-cli": "^0.13.6",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "tsc-watch": "^4.6.0",
    "tsconfig-replace-paths": "^0.0.11",
    "typescript": "^4.5.4"
  }
}
