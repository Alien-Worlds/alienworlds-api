{
  "name": "alienworlds-api",
  "version": "1.0.0",
  "description": "API for AlienWorlds data",
  "main": "index.js",
  "engines": {
    "node": ">=17.3.0 <18.0.0",
    "npm": ">=8.3.0 <9.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "setup-database": "node ./scripts/setup-database.js",
    "lint": "eslint \"src/**/*\" \"tests/**/*\"",
    "lint:fix": "eslint --fix \"src/**/*\" \"tests/**/*\"",
    "prettier:check": "yarn prettier --check \"src/**/*\" \"tests/**/*\"",
    "prettier:fix": "yarn prettier --write \"src/**/*\" \"tests/**/*\"",
    "test:unit": "jest --config=jest.config.unit.js",
    "test:api": "jest --config=jest.config.api.js --detectOpenHandles",
    "build": "node ./scripts/create-env.js && yarn clean && tsc",
    "build:prod": "node ./scripts/create-env.js --prod && yarn clean && tsc --project tsconfig.build.json",
    "clean": "rm -rf ./build",
    "watch": "tsc --watch",
    "start": "node build/index.js",
    "start:watch": "tsc-watch --onSuccess \"yarn start\""
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.{ts,tsx,js,jsx}": "eslint --fix'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@alien-worlds/alienworlds-api-common": "^0.0.82",
    "@alien-worlds/api-core": "^0.0.101",
    "dotenv": "^10.0.0",
    "ethers": "^5.1.0",
    "fastify": "^3.25.0",
    "fastify-autoload": "^3.9.0",
    "fastify-cors": "^6.0.2",
    "fastify-oas": "^3.0.8",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^27.4.5",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^27.1.3",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.8.2"
  }
}
