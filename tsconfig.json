{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist/",
    "baseUrl": "src",
    "paths": {
      "@common/*": ["common/*"],
      "@config": ["config/index"],
      "@config/types": ["config/config.types"],
      "@core/*": ["core/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.fixture.ts",
    "**/*.mock.ts",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}
